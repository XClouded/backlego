<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/wait_mask"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B_A"
        >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="32dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.BarTitle"
                android:text="亲，您正在浏览的是">
        </TextView>
        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.BarTitle"
                android:textColor="@color/orange"
                android:text="微淘达人">
        </TextView>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_desc"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            style="@style/TextView.SubText1"
            android:text="每天有上千人在浏览微淘宝贝哦">
    </TextView>
    <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/bundle_bg"
            >
    </ImageView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
        <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                style="@style/TextView.SubText1"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="你可以继续浏览网页版或者体验更好的完整版（2.1M）"
                android:layout_gravity="bottom"
                android:layout_marginBottom="100dp">
        </TextView>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                >
            <LinearLayout
                    android:id="@+id/ll_choice"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                <Button
                        android:id="@+id/btn_h5"
                        android:text="进入网页版"
                        style="@style/Button.NormalGray"
                        android:layout_width="125dp"
                        android:layout_marginRight="32dp">
                </Button>
                <Button
                        android:id="@+id/btn_native"
                        android:text="体验完整版"
                        android:layout_width="125dp"
                        style="@style/Button.Normal">
                </Button>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:id="@+id/horizontal_divide"
                    android:layout_marginTop="16dp"
                    android:background="#cccccc"
                    android:visibility="gone">
            </View>
            <LinearLayout
                    android:id="@+id/ll_download"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="78dp"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView.SectionText"
                        android:text="微淘达人"
                        android:visibility="gone">
                </TextView>
                <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_horizontal_bg"
                        />
                <View
                        android:layout_width="1px"
                        android:layout_height="82dp"
                        android:background="#cccccc"
                        >
                </View>
                <Button
                        android:id="@+id/btn_cancel"
                        android:text="取消"
                        android:textColor="@color/F_black_light_4"
                        android:layout_height="match_parent"
                        android:layout_width="82dp"
                        android:background="#ffffffff"
                        >
                </Button>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>